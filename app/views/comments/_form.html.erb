<%= render 'shared/errors', obj: @comment %>

<%= form_for [@ticket, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :body, "Add a comment" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= select_tag :status,
    options_for_select(%w(new blocked in_progress fixed), params[:status]), { :include_blank => "Do not change" } %>
  </div>
  <%= f.submit (@comment.new_record? ? "Create Comment" : "Update Comment"), class: "btn btn-success" %>
<% end %>
